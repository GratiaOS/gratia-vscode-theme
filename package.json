{
  "name": "gratia-vscode-theme",
  "displayName": "Gratia — Garden Core (Dark)",
  "description": "Authority-tinted selection, mood-toned chrome, and a soft glow caret that mirrors Garden tokens.",
  "icon": "mark/gratia-mark.png",
  "version": "0.1.3",
  "publisher": "gratiaos",
  "repository": {
    "type": "git",
    "url": "https://github.com/GratiaOS/gratia-vscode-theme.git"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/GratiaOS"
  },
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Themes"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Gratia — Garden Dark (Soft)",
        "uiTheme": "vs-dark",
        "path": "./themes/gratia-garden-dark-soft.json"
      },
      {
        "label": "Gratia — Garden Dark (Focused)",
        "uiTheme": "vs-dark",
        "path": "./themes/gratia-garden-dark-focused.json"
      },
      {
        "label": "Gratia — Garden Dark (Celebratory)",
        "uiTheme": "vs-dark",
        "path": "./themes/gratia-garden-dark-celebratory.json"
      }
    ],
    "commands": [
      {
        "command": "gratiaTheme.setCozy",
        "title": "Gratia Theme: Cozy Density"
      },
      {
        "command": "gratiaTheme.setSnug",
        "title": "Gratia Theme: Snug Density"
      },
      {
        "command": "gratiaTheme.toggleDensity",
        "title": "Gratia Theme: Toggle Density"
      },
      {
        "command": "gratia.setMood.soft",
        "title": "Gratia: Set Mood · Soft"
      },
      {
        "command": "gratia.setMood.focused",
        "title": "Gratia: Set Mood · Focused"
      },
      {
        "command": "gratia.setMood.celebratory",
        "title": "Gratia: Set Mood · Celebratory"
      }
    ]
  },
  "activationEvents": [
    "onCommand:gratiaTheme.setCozy",
    "onCommand:gratiaTheme.setSnug",
    "onCommand:gratiaTheme.toggleDensity",
    "onCommand:gratia.setMood.soft",
    "onCommand:gratia.setMood.focused",
    "onCommand:gratia.setMood.celebratory"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "build": "tsc -p ./",
    "prepublishOnly": "node scripts/prepublish-tokens.mjs && node scripts/generate-theme.mjs && npm run build",
    "lint": "node scripts/lint-theme.mjs",
    "package": "npm run prepublishOnly && npm run lint && vsce package",
    "watch": "node scripts/watch-all.mjs"
  },
  "devDependencies": {
    "@gratiaos/tokens": "^1.0.7",
    "@types/node": "^20.12.12",
    "@types/vscode": "^1.86.0",
    "typescript": "^5.6.3",
    "vsce": "^2.15.0"
  }
}
